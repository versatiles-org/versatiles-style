{
  "name": "@versatiles/style",
  "version": "5.1.0",
  "description": "Generate StyleJSON for MapLibre",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "npm run lint && npm run test && npm run build",
    "build": "rm -rf release; npm run build-browser && npm run build-node && npm run build-styles && npm run build-sprites",
    "build-browser": "rollup -c=rollup.config.js && $(cd release/versatiles-style; tar -cf - versatiles-style.* | gzip -9 > ../versatiles-style.tar.gz)",
    "build-node": "rm -rf dist && tsc -p tsconfig.node.json && chmod +x dist/index.js",
    "build-styles": "tsx scripts/build-styles.ts",
    "build-sprites": "tsx scripts/build-sprites.ts",
    "dev": "tsx scripts/dev.ts",
    "// doc": "vrt ts2md src/index.ts tsconfig.node.json | vrt insertmd README.md '# API'",
    "lint": "eslint --color .",
    "prepack": "npm run build",
    "release": "npx vrt release-npm",
    "test": "npm run test-typescript",
    "test-coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test-typescript": "NODE_OPTIONS=--experimental-vm-modules jest",
    "upgrade": "npm-check-updates -u && rm -f package-lock.json && rm -rf node_modules; npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/versatiles-org/versatiles-style.git"
  },
  "author": "yetzt <versatiles@yetzt.me>, Michael Kreil <versatiles@michael-kreil.de>",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@types/color": "^4.2.0",
    "brace-expansion": "^4.0.0",
    "color": "^4.2.3"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "devDependencies": {
    "@maplibre/maplibre-gl-style-spec": "^23.0.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/bin-pack": "^1.0.3",
    "@types/brace-expansion": "^1.1.2",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@versatiles/container": "^1.2.3",
    "@versatiles/release-tool": "^1.2.6",
    "bin-pack": "^1.0.2",
    "eslint": "^9.18.0",
    "inquirer": "^12.3.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "npm-check-updates": "^17.1.13",
    "rollup": "^4.30.1",
    "rollup-plugin-dts": "^6.1.1",
    "sharp": "^0.33.5",
    "tar-stream": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
